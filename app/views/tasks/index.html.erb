<h1>Task Management Application</h1>
<p>Welcome to Task Management Application</p>

<% if @tasks.present? %>

	<table border=1>
		<tr>
			<th>SN</th>
			<th>Title</th>
			<th>Description</th>
			<th>Action</th>
		</tr>

		<% @tasks.each do |t|%>
		<tr>
			<td><%= t.id %></td>
			<td><%= t.title %></td>
			<td><%= t.description %></td>
			<td><%= link_to "View" , task_url(t.id) %></td>
		</tr>
		<% end %>
	</table>

<% end %>


<%= link_to "Create New Task", new_task_url %>
