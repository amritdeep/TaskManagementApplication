<h1>Task Management Application</h1>
<p>Welcome to Task Management Application</p>

<%= link_to "Create New Task", new_task_url %> 

<br>

<% if @tasks.present? %>

<h2>List of Your Task </h2>
	<table border=1>
		<tr>
			<th>SN</th>
			<th>Title</th>
			<th>Description</th>
			<th>Action</th>
		</tr>

		<% @tasks.each do |t|%>
		<tr>
			<td><%= t.id %></td>
			<td><%= t.title %></td>
			<td><%= t.description %></td>
			<td><%= link_to "View" , task_url(t.id) %></td>
		</tr>
		<% end %>
	</table>

<% end %>

<% if @share_tasks.present? %>

<h2>List of Share Task with You </h2>

	<table border=1>
		<tr>
			<th>Title</th>
			<th>Description</th>
			<th>Action</th>
		</tr>

		<% @share_tasks.each do |s| %>
		<tr>
			<td><%= s.title %></td>
			<td><%= s.description %></td>
			<td><%= link_to "View", task_url(s.id) %></td>
		</tr>

		<% end %>

	</table>
<% end %>




